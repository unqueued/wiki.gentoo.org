==Change root passwd==

{{RootCmd
 | sed -i 's/^root:.*/root::::::::/' /mnt/gentoo/etc/shadow
}}

==Start wifi insmod wifi driver==

{{RootCmd
 | cd /etc/init.d/
 | cp net.lo net.eth0
 | cp net.lo net.wlan0
 | nano /etc/local.d/insmod.start    
  insmod  /lib/modules/3.4.39_zero/xradio_wlan.ko #insmod modules
}}
 

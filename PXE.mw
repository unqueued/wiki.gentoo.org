=== Fedora installation ===

{{FileBox|filename=~/bin/fedora-pxe-install|1=<nowiki>
#!/bin/bash -xe

# Mirror URL
mirror="http://mirrors.nic.cz/fedora/linux"
# Release status: released | development
status=released
# Release: <number> | rawhide
release=22
# Architecture: x86 | x86_64 | ...
arch=x86_64
# Product: Workstation | Server | Cloud | ...
product=Workstation
# TFTP directory path
prefix=/tftproot
# Temporary directory path
tmp=/root/tmp/fedora-pxe-boot

test -n "$prefix"
test -n "$tmp"

mkdir -p "$tmp"

kernel="fedora-$release-$arch-kernel"
initrd="fedora-$release-$arch-initrd"

test -x "$tmp/$kernel" || curl -o "$tmp/$kernel" "$mirror/$status/$release/$arch/os/images/pxeboot/vmlinuz"
test -x "$tmp/$initrd" || curl -o "$tmp/$initrd" "$mirror/$status/$release/$arch/os/images/pxeboot/initrd.img"
cat > "$tmp/grub.cfg" << EOF
menuentry "Install Fedora $release $arch $product" {
    linux /boot/$kernel repo=$mirror/$status/$release/$product/$arch/os
    initrd /boot/$initrd
}
EOF

grub2-mknetdir --net-directory "$prefix"
mv "$tmp/$kernel" "$tmp/$initrd" "$prefix/boot"
mv "$tmp/grub.cfg" "$prefix/boot/grub/grub.cfg"
</nowiki>}}

